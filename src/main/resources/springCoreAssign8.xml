<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd
        http://www.springframework.org/schema/context
        http://www.springframework.org/schema/context/spring-context.xsd">
    <context:component-scan base-package="com.ttn.Ques8"/>
    <context:annotation-config/>

    <!--for Ques 8-->
    <!--<bean id="tea" class="com.ttn.Ques8.Tea"/>-->
    <bean id="expressTea" class="com.ttn.Ques8.ExpressTea"/>
    <bean id="teaRestaurant" class="com.ttn.Ques8.Restaurant" scope="prototype">
        <property name="hotDrink">
            <bean id="tea" class="com.ttn.Ques8.Tea"/>
        </property>
    </bean>
    <bean id="expressTeaRestaurant" class="com.ttn.Ques8.Restaurant" >
        <property name="hotDrink">
            <bean id="expressTea" class="com.ttn.Ques8.ExpressTea"/>
        </property>
    </bean>

</beans>